{
    "name": "Copy Page Title",
    "version": "0.1",
    "description": "Copies the current tab's title as a rich-text link.",
    "manifest_version": 2,
    "permissions": ["activeTab"],
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "32": "icon32.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    }
}
